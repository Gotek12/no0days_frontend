root = true

[*.{js,ts}]
end_of_line = lf
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[{*.less,*.css}]
end_of_line = lf
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.html]
end_of_line = lf
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.json]
end_of_line = lf
charset = utf-8
indent_style=tab
tab_width=4

[*.md]
max_line_length = off
trim_trailing_whitespace = false
